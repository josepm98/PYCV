<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />

    <meta charset="utf-8">

    <!-- Description, Keywords and Author -->

    <meta name="description" content="">

    <meta name="author" content="">

    <title>@ViewBag.Title - Play your CV</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon">

    <!-- style -->

    <link href="Content/style.css" rel="stylesheet" type="text/css">

    <!-- style -->
    <!-- bootstrap -->

    <link href="Content/bootstrap.min.css" rel="stylesheet" type="text/css">

    <!-- responsive -->

    <link href="Content/responsive.css" rel="stylesheet" type="text/css">

    <!-- font-awesome -->

    <link href="Content/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- font-awesome -->

    <link href="Content/effects/set2.css" rel="stylesheet" type="text/css">

    <link href="Content/effects/normalize.css" rel="stylesheet" type="text/css">

    <link href="Content/effects/component.css" rel="stylesheet" type="text/css">
</head>

<body>
    <!-- header -->

    <header role="header">

        <div class="container">

            <!-- logo -->

            <h1>

                <a href="" title="PlayYourCV"><img src="images/iconoNegro_blanco.PNG" title="PlayYourCV" alt="PlayYourCV" /></a>

            </h1>

            <!-- logo -->
            <!-- nav -->

            <nav role="header-nav" class="navy">

                <ul>

                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </ul>

            </nav>

            <!-- nav -->

        </div>

    </header>

    <main role="main-home-wrapper" class="container">
        @RenderBody()
        <hr />

        </main>

        <footer role="footer">

            <!-- logo -->
            <!-- logo -->
            <!-- nav -->

            <nav role="footer-nav">

                <ul>

                    <li><a href="index.html" title="Work">Work</a></li>

                    <li><a href="about.html" title="About">About</a></li>

                    <li><a href="blog.html" title="Blog">Blog</a></li>

                    <li><a href="contact.html" title="Contact">Contact</a></li>

                </ul>

            </nav>

            <!-- nav -->

            <ul role="social-icons">

                <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>

                <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>

                <li><a href="#"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>

                <li><a href="#"><i class="fa fa-flickr" aria-hidden="true"></i></a></li>

            </ul>

            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>

        </footer>

        <!-- footer -->
        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        <script src="js/jquery.min.js" type="text/javascript"></script>

        <!-- custom -->

        <script src="Scripts/nav.js" type="text/javascript"></script>

        <script src="Scripts/custom.js" type="text/javascript"></script>

        <!-- Include all compiled plugins (below), or include individual files as needed -->

        <script src="Scripts/bootstrap.min.js" type="text/javascript"></script>

        <script src="Scripts/effects/masonry.pkgd.min.js" type="text/javascript"></script>

        <script src="Scripts/effects/imagesloaded.js" type="text/javascript"></script>

        <script src="Scripts/effects/classie.js" type="text/javascript"></script>

        <script src="Scripts/effects/AnimOnScroll.js" type="text/javascript"></script>

        <script src="Scripts/effects/modernizr.custom.js"></script>

        <!-- jquery.countdown -->

        <script src="Scripts/html5shiv.js" type="text/javascript"></script>

</body>

</html>