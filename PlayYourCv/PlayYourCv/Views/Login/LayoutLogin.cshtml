<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PlayYourCV</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <environment include="Development">
        <link rel="stylesheet" href="~/Content/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/Content/css/site.css" />
        <link rel="shortcut icon" href="~/Content/images/playyourcvlogo1.png" type="image/x-icon">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/Content/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/Content/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>

        @RenderBody()


    @RenderSection("Scripts", required: false)
</body>
</html>
