@model PlayYourCV.Models.Contenido

@{
    string titulo = (string)ViewData["Titulo"];
    PlayYourCV.Models.Contenido c = (PlayYourCV.Models.Contenido)ViewData["Educacion"];
}

<h2>@titulo</h2>
<form action="/Idiomas/Edit" method="post">
    <div class="form-horizontal">
        <input type="text" class="form-control" style="display:none" name="Id" value="@c.Id" />
        <div class="form-group">
            <label for="Nombre">Nombre:</label>
            <input type="text" class="form-control" name="Nombre" value="@c.Nombre" />
        </div>

        <div class="form-group">
            <label for="Hablado">Nivel Hablado:</label>
            <input type="text" class="form-control" name="Hablado" value="@c.Hablado" />
        </div>

        <div class="form-group">
            <label for="Escrito">Nivel Escrito:</label>
            <input type="text" class="form-control" name="Escrito" value="@c.Escrito" />
        </div>

        <div class="form-group">
            <label for="Leido">Nivel Leido:</label>
            <input type="text" class="form-control" name="Leido" value="@c.Leido" />
        </div>

        <div class="form-group">
            <label for="NivelGeneral">Nivel General:</label>
            <input type="text" class="form-control" name="NivelGeneral" value="@c.NivelGeneral" />
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar cambios" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>