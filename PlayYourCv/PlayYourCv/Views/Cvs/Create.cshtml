@{
    ViewData["Title"] = "Create";
}

@model PlayYourCV.Models.Usuario
@{
    string titulo = (string)ViewData["Titulo"];
}

<h2>@titulo</h2>
@{
    PlayYourCV.Models.Usuario usuario = (PlayYourCV.Models.Usuario)ViewData["usuario"];
    if (usuario != null)
    {
        string fecha;
        if (usuario.FechaNacimiento.Equals(default(DateTime)))
        {
            fecha = "";
        }
        else
        {
            fecha = String.Format("{0:yyyy-MM-dd}", usuario.FechaNacimiento);
        }
        <div class="col-md-12">
            <div class="jumbotron">
                <h2>Seleciona los atributos que quieres mostrar en tu curriculum. </h2>
            </div>
        </div>
        <form>
            <div class="row">

                <div class="col-md-12">
                    <div class="col-md-3">
                        <div class="jumbotron">
                            <h2>Datos Personales</h2>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" checked="checked" /> @usuario.Nombre
                                </label>
                                <label>
                                    <input type="checkbox" checked="checked" /> @usuario.Apellido1
                                </label>
                                <label>
                                    <input type="checkbox" checked="checked" /> @usuario.Apellido2
                                </label>
                                <label>
                                    <input type="checkbox" checked="checked" /> @usuario.Email
                                </label>
                                <label>
                                    <input type="checkbox" checked="checked" /> Telefono
                                </label>
                                <label>
                                    <input type="checkbox" checked="checked" /> Foto perfil
                                </label>
                                <label>
                                    <input type="checkbox" checked="checked" /> Fecha de Nacimiento
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="jumbotron">
                            <h2>Estudios</h2>
                            <div class="checkbox">
                                @{
                                    List<PlayYourCV.Models.Contenido> listaEducacion = (List<PlayYourCV.Models.Contenido>)ViewData["listaEducacion2"];
                                    if (listaEducacion != null)
                                    {
                                        foreach (PlayYourCV.Models.Contenido c in listaEducacion)
                                        {

                                            <label>
                                                <input type="checkbox" checked="checked" /> @c.Nombre
                                            </label>
                                        }
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="jumbotron">
                            <h2>Idiomas</h2>
                            <div class="checkbox">
                                @{
                                    List<PlayYourCV.Models.Contenido> listaIdiomas = (List<PlayYourCV.Models.Contenido>)ViewData["listaIdiomas"];
                                    if (listaIdiomas != null)
                                    {
                                        foreach (PlayYourCV.Models.Contenido c in listaIdiomas)
                                        {

                                            <label>
                                                <input type="checkbox" checked="checked" /> @c.Nombre
                                            </label>

                                        }
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="jumbotron">
                            <h2>Hobbies</h2>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" checked="checked" /> Nombre
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-3">
                                <div class="jumbotron">
                                    <h2>Presentación</h2>
                                    <div class="checkbox">
                                        @{
                                            List<PlayYourCV.Models.Contenido> listaPre = (List<PlayYourCV.Models.Contenido>)ViewData["listapre"];
                                            if (listaPre != null)
                                            {
                                                foreach (PlayYourCV.Models.Contenido c in listaPre)
                                                {
                                                    <label>
                                                        <input type="checkbox" checked="checked" /> @c.Nombre
                                                    </label>
                                                }
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="jumbotron">
                                    <h2>Skills</h2>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" checked="checked" /> Nombre
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="jumbotron">
                                    <h2>Experiencia Laboral</h2>
                                    <div class="checkbox">
                                        @{
                                            List<PlayYourCV.Models.Contenido> listaExp = (List<PlayYourCV.Models.Contenido>)ViewData["lista"];
                                            if (listaExp != null)
                                            {
                                                foreach (PlayYourCV.Models.Contenido c in listaExp)
                                                {
                                                    <label>
                                                        <input type="checkbox" checked="checked" />@c.Posicion
                                                    </label>
                                                }
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="jumbotron">
                                    <h2>Datos adicionales</h2>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" checked="checked" /> Nombre
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <label>
                                <button type="submit" class="btn btn-default">Crear CV</button>
                            </label>
                        </div>
                    </div>

                </div>
            </div>
        </form>
    }
}