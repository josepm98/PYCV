@model IEnumerable<PlayYourCV.Models.Cv>
@{
    /**/

    string titulo = (string)ViewData["Titulo"];
    List<PlayYourCV.Models.Cv> listaCv = (List<PlayYourCV.Models.Cv>)ViewData["listaCv"];
}
<h2>@titulo</h2>
@{
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @if (listaCv != null)
    {

        foreach (PlayYourCV.Models.Cv c in listaCv)
        {

            <div class="col-md-3">
                <div class="jumbotron">
                    <h3>@c.Nombre</h3>
                </div>
            </div>

}

}
                <div class="col-md-3">

                        <div class="jumbotron"data-toggle="modal" data-target="#myEdit" >
                            <h2 >+</h2>
                        </div>
                    
                </div>
                <div id="myEdit" class="modal fade" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal Edit content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Edita tus datos</h4>
                            </div>
                            <div class="modal-body">
                                <div class="form-group">
                                    <form id="editModalForm" name="editForm" action="/Cvs/Index" method="post">
                                        <div>
                                            <input type="text" style="display:none" class="form-control" id="idInput" name="Id" value="" />
                                            <input type="text" class="form-control" id="nombreInput" name="Nombre" value="" />
                                            <input id="btnEditForm" type="submit" value="Guardar cambios" class="btn btn-default" />
                                        </div>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script>
    form = document.getElementById("editModalForm");
    document.getElementById("btnEditForm").addEventListener("click", function () {
        form.submit();
    });
</script>







