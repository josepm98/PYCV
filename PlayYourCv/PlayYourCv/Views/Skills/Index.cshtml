@model PlayYourCV.Models.Contenido

@{
    ViewData["Title"] = "Index";
    List<PlayYourCV.Models.Contenido> listaSki = (List<PlayYourCV.Models.Contenido>)ViewData["lista"];
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-2">
            <h2>Skills</h2>
        </div>
        <div class="col-xs-6 col-md-2">
            <div class="bityconsejo"><img class="Bityicon img-responsive" src="~/Content/images/mascota/Bityhelp_ani.gif" type="button" data-toggle="modal" data-target="#Bitymodal" /></div>
        </div>
        <div class="col-xs-6 col-md-offset-6 col-md-2">
            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myCreate">Añadir nueva</button>
        </div>
    </div>

    <!-- Modal Bity-->
    <div class="modal fade" id="Bitymodal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">

                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>

                    <div class="img-mascota">
                        <img class="BityAnimado img-responsive center-block" src="~/Content/images/mascota/Robot_2ani.gif" />

                        <p style="margin-top:20px;font-weight: 600;">
                            No te cortes, pon todas las habilidades que poseas.<br />
                        </p>
                        <p>
                            Desde las técnicas, como pueda ser un programa informático, una metodología de trabajo, una plataforma, etc. <br />
                            Hasta las transversales: si sabes trabajar en equipo, si tienes creatividad, si sabes adaptarte, si eres optimista...
                        </p>
                    </div>

                </div>

                <!--Cerrar Model Content-->
            </div>

        </div>
    </div>
    <!--FIN MODAL-->


    @{
        if (listaSki != null)
        {
            foreach (PlayYourCV.Models.Contenido c in listaSki)
            {
                <div class="jumbotron col-sm-12">

                    <div class="col-md-10">
                        <h3>@c.Nombre</h3>
                        <input type="hidden" class="ideditable" value="@c.Id" />
                    </div>

                    <div class="col-sm-1" style="color:gray; padding:0px; padding-top:15px">

                        <i type="button" onclick="deleteExp(@c.Id)" class="boton far fa-trash-alt fa-2x"></i>

                    </div>
                    <div class="col-sm-1" style="color:#7ECFE3; padding:0px; padding-top:15px">

                        <i type="button" onclick="editHobbie(@c.Id,'@c.Nombre')" data-toggle="modal" data-target="#myEdit" class="boton fas fa-edit fa-2x mostraedit"></i>
                    </div>
                </div>

            }
        }
    }


    <!-- Modal Edit -->
    <div id="myEdit" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal Edit content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edita esta habilidad</h4>
                </div>
                <div class="modal-body">

                    @using (Html.BeginForm("Edit", "Skills", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Id, htmlAttributes: new { @id = "id_objectiu" })

                            <div class="form-group">
                                <label class="control-label col-md-2">Skill</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @id = "nom_objectiu" } })
                                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }

                </div>

            </div>
        </div>
    </div>


    <!-- Modal Create -->
    <div id="myCreate" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal Create content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Nueva habilidad</h4>
                </div>
                <div class="modal-body">

                    @using (Html.BeginForm("Create", "Skills", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <label class="control-label col-md-2">Skill</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Crear" class="btn btn-default" />
                                </div>
                            </div>
                        </div>

                    }

                </div>

            </div>
        </div>
    </div>

</div>


<script>
    function deleteExp(i) {
        res = confirm('¿Estás segura de querer eliminar esta habilidad?');
        if (res) {
            window.location.replace("/Skills/Delete/" + i);
        }
    }
    function add(i) {
        window.location.replace("/Skills/Create/");
    }
    function editExp(i) {
        window.location.replace("/Skills/Edit/" + i);
    }
    window.onload = function () {
        if (
            window.location.href.split("/")[window.location.href.split("/").length - 1] != "Index"
        ) {
            window.location.replace("/Skills/Index");
        }
    }

    $(document).on("click", ".mostraedit", function () {
        $("#nom_objectiu").val($(this).closest(".jumbotron").find(".nomeditable").text());
        $("#id_objectiu").val($(this).closest(".jumbotron").find(".ideditable").val());
    });

</script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
