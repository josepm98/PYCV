@model PlayYourCV.Models.Contenido

@{
    string titulo = (string)ViewData["Titulo"];
    string lvlProgress = ViewData["lvlProgress"].ToString();
    string lvlImg = ViewData["imgLvlRoute"].ToString();
    List<PlayYourCV.Models.Contenido> listaEducacion = (List<PlayYourCV.Models.Contenido>)ViewData["listaEducacion"];
}
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-2">
            <h2>Educación</h2>
        </div>
        <div class="col-xs-6 col-md-2">
            <div class="bityconsejo"><img class="Bityicon img-responsive" src="~/Content/images/mascota/Bityhelp_ani.gif" type="button" data-toggle="modal" data-target="#Bitymodal" /></div>
        </div>
        <div class="col-xs-6 col-md-offset-6 col-md-2">
            <div class="col-xs-12 col-md-2">
                <button type="button" class="btn btn-info" onclick="add()" data-toggle="modal" data-target="#editModal">Agregar Formación</button>
            </div>
        </div>
    </div>
    <!-- Modal Bity-->
    <div class="modal fade" id="Bitymodal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">

                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>

                    <div class="img-mascota">
                        <img class="BityAnimado img-responsive center-block" src="~/Content/images/mascota/Robot_2ani.gif" />

                        <p style="margin-top:20px;font-weight: 600;">
                            No es necesario que lo pongas todo. 
                        </p>
                        <p>
                            Por ejemplo, si tu nivel de estudios más alto es bachillerato, no es necesario que pongas la ESO o primaria, se sobreentiende que ya los has completado.
                            <br />
                            <br />
                            - No te olvides de poner todos los cursos, másters y formaciones que hayas completado.
                        </p>
                    </div>

                </div>

                <!--Cerrar Model Content-->
            </div>

        </div>
    </div>
    <!--FIN MODAL-->
    @{
        if (listaEducacion != null)
        {
            foreach (PlayYourCV.Models.Contenido c in listaEducacion)
            {
                string fechaI, fechaF;
                if (c.FechaInicio.Equals(default(DateTime)))
                {
                    fechaI = "";
                }
                else
                {
                    fechaI = c.FechaInicio.ToString("yyyy-MM-dd");
                }
                if (c.FechaFin.Equals(default(DateTime)))
                {
                    fechaF = "";
                }
                else
                {
                    fechaF = c.FechaFin.ToString("yyyy-MM-dd");
                }
                <div class="jumbotron col-sm-12">

                    <div class="col-sm-6">
                        <h3 style="font-family: quicksand;color: #58B9B3;">@c.Nombre</h3>
                    </div>
                    <div class="col-sm-3">
                        <label>Fecha Inicio: @String.Format("{0:d}", c.FechaInicio)</label>
                    </div>
                    <div class="col-sm-3">
                        <label>Fecha Fin: @String.Format("{0:d}", c.FechaFin)</label>
                    </div>
                    <div class="col-md-12">
                        <p>@c.Descripcion</p>
                    </div>
                    <div class="col-md-5">
                        <p>Centro: @c.EmpresaEscuela</p>
                    </div>
                    <div class="col-md-5">
                        <p>Lugar: @c.Lugar</p>
                    </div>
                    <div class="col-sm-12 col-md-2" style="text-align:end; color:gray;">
                        <div class="col-xs-2 col-lg-4" style="text-align:end">
                            <i type="button" onclick="deleteCourse(@c.Id)" class="boton far fa-trash-alt fa-2x"></i>
                        </div>
                        <div class="col-xs-2 col-lg-4" style="text-align:end; color:#7ECFE3;">
                            <i type="button" onclick="editCourse(@c.Id,'@c.Nombre','@c.Descripcion','@c.EmpresaEscuela','@c.Lugar','@fechaI','@fechaF')" data-toggle="modal" data-target="#editModal" class="boton fas fa-edit fa-2x"></i>
                        </div>

                    </div>

                </div>
            }
        }
    }

    <!-- Modal Edit -->
    <div id="editModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal Edit content-->
            <div class="form-horizontal">

                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Edita esta formación</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <form id="editModalForm" name="editForm" action="/Educacion/Edit" method="post">
                                <div class="col-md-12 divsforms">
                                    <input type="text" style="display:none" class="form-control" id="idInput" name="Id" value="" />
                                    <label for="Nombre">Nombre:</label>
                                    <input type="text" class="form-control" id="nombreInput" name="Nombre" value="" />
                                </div>
                                <div class="col-md-12 divsforms">
                                    <label for="Descripcion">Descripción:</label>
                                    <input type="text" class="form-control" id="descripcionInput" name="Descripcion" value="" />
                                </div>
                                <div class="col-md-12 divsforms">
                                    <label for="EmpresaEscuela">Centro Formativo:</label>
                                    <input type="text" class="form-control" id="escuelaInput" name="EmpresaEscuela" value="" />
                                </div>
                                <div class="col-md-12 divsforms">
                                    <label for="Lugar">Lugar:</label>
                                    <input type="text" class="form-control" id="lugarInput" name="Lugar" value="" />
                                </div>
                                <div class="col-md-12 divsforms">
                                    <label for="FechaInicio">Fecha Inicio:</label>
                                    <input type="date" class="form-control" id="fechaIniInput" name="FechaInicio" value="" />
                                </div>
                                <div class="col-md-12 divsforms">
                                    <label for="FechaFin">Fecha Fin:</label>
                                    <input type="date" class="form-control" id="fechaFinInput" name="FechaFin" value="" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-8 col-md-3">
                            <input id="btnEditForm" type="submit" value="Guardar cambios" class="btn btn-default" />
                        </div>
                    </div>

                </div>
                <!--Fin Form-->
            </div>
        </div>
    </div>
</div>
<script>

    function deleteCourse(i) {
        res = confirm('¿Estás seguro de querer eliminar esta formación?');
        if (res) {
            window.location.replace("/Educacion/Delete/" + i);
        }
    }

    function add() {
        document.editForm.action = "/Educacion/Create";
        document.getElementById("idInput").value = "";
        document.getElementById("nombreInput").value = "";
        document.getElementById("descripcionInput").value = "";
        document.getElementById("escuelaInput").value = "";
        document.getElementById("lugarInput").value = "";
        document.getElementById("fechaIniInput").value = "";
        document.getElementById("fechaFinInput").value = "";
    }

    function editCourse(id, nombre, des, escuela, lugar, fechai, fechaf) {
        document.editForm.action = "/Educacion/Edit";
        document.getElementById("idInput").value = id;
        document.getElementById("nombreInput").value = nombre;
        document.getElementById("descripcionInput").value = des;
        document.getElementById("escuelaInput").value = escuela;
        document.getElementById("lugarInput").value = lugar;
        document.getElementById("fechaIniInput").value = fechai;
        document.getElementById("fechaFinInput").value = fechaf;
    }

    window.onload = function () {
        if (
            window.location.href.split("/")[window.location.href.split("/").length - 1] != "Index"
        ) {
            window.location.replace("/Educacion/Index");
        }
    }

    form = document.getElementById("editModalForm");
    document.getElementById("btnEditForm").addEventListener("click", function () {
        form.submit();
    });


    progBar = document.getElementById("progressBarLvl");
    progBar.style.width = @lvlProgress+"%";
    progBar.innerHTML +=@lvlProgress+"%";
    document.getElementById("imgLvl").src ='@lvlImg';

</script>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
