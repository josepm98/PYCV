
@{
    ViewData["Title"] = "Index";
}

@model PlayYourCV.Models.Usuario
@{
    string titulo = (string)ViewData["Titulo"];
    string lvlProgress = ViewData["lvlProgress"].ToString();
    string lvlImg = ViewData["imgLvlRoute"].ToString();
}

<h2>@titulo</h2>
@{
    PlayYourCV.Models.Usuario usuario = (PlayYourCV.Models.Usuario)ViewData["usuario"];
    if (usuario != null)
    {
        string fecha;
        if (usuario.FechaNacimiento.Equals(default(DateTime)))
        {
            fecha = "";
        }
        else
        {
            fecha = String.Format("{0:yyyy-MM-dd}", usuario.FechaNacimiento);
        }
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="fotoperfil">
                                <img src="@usuario.FotoURL" title="PlayYourCV" alt="PlayYourCV" width="100%" />
                            </div>
                        </div>
                    </div>

                    <div class="row">

                            <!-- Modal Bity-->
                            <div class="modal fade" id="Bitymodal" role="dialog">
                                <div class="modal-dialog">

                                    <!-- Modal content-->
                                    <div class="modal-content">

                                        <div class="modal-body">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>

                                            <div class="img-mascota">
                                                <img class="BityAnimado img-responsive center-block" src="~/Content/images/mascota/Robot_1ani.gif" />

                                                <p style="margin-top:20px;font-weight: 600;">
                                                    La fotografía es la parte más visual de tu curriculum.
                                                </p>
                                                <p>
                                                    <br />
                                                    - Esta, debería incluir tanto la cara como los hombros.
                                                    <br />
                                                    - No recicles, hazte una foto para la ocasión.
                                                    <br />
                                                    - Sonríe de forma autentica.
                                                    <br />
                                                    - Cuida la iluminación y usa un fondo neutro
                                                    <br />
                                                    - Usa una vestimenta acorde con el puesto.
                                                </p>
                                            </div>

                                        </div>

                                        <!--Cerrar Model Content-->
                                    </div>

                                </div>
                        </div>
                    </div>
                </div>
                        <div class="col-md-9">
                            <div class="jumbotron">
                                <form action="/DatosPersonales/Edit" method="post" enctype="multipart/form-data">
                                    <input type="hidden" name="fotoanterior" value="@usuario.FotoURL" />
                                    <div class="form-group">
                                        <label for="Nombre">Nombre:</label>
                                        <input type="text" class="form-control" name="Nombre" value="@usuario.Nombre" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="Apellido1">Primer Apellido:</label>
                                        <input type="text" class="form-control" name="Apellido1" value="@usuario.Apellido1" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="Apellido2">Segundo Apellido:</label>
                                        <input type="text" class="form-control" name="Apellido2" value="@usuario.Apellido2" />
                                    </div>
                                    <div class="form-group">
                                        <label for="Telefono">Telefono:</label>
                                        <input type="text" class="form-control" name="Telefono" value="@usuario.Telefono" />
                                    </div>
                                    <div class="form-group">
                                        <label for="FechaNacimiento">Fecha Nacimiento:</label>
                                        <input type="date" class="form-control" name="FechaNacimiento" value="@fecha" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="Email">Email:</label>
                                        <input type="email" name="Email" class="form-control" value="@usuario.Email" required />
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="foto">Subir foto: (Válido solo formato .jpg)</label>
                                                <input type="file" name="foto" id="foto" class="inputfile" style="height:auto;" />
                                            </div>
                                        </div>
                                        <div class="col-xs-8 col-md-offset-2 col-md-4">
                                            <div class="bityconsejo" style="margin-top:30px;"><img class="Bityicon img-responsive" src="~/Content/images/mascota/Bityhelp_ani.gif" type="button" data-toggle="modal" data-target="#Bitymodal" /></div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <button type="submit" class="btn btn-default">Actualizar</button>
                                        </div>
                                    </div>
                                </form>



                            </div>
                        </div>
                    </div>
                </div>
    }
}

<script>
    progBar = document.getElementById("progressBarLvl");
    progBar.style.width = @lvlProgress+"%";
    progBar.innerHTML +=@lvlProgress+"%";
    document.getElementById("imgLvl").src ='@lvlImg';
</script>