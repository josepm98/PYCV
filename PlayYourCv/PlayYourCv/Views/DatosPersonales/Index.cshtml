
@{
    ViewData["Title"] = "Index";
}

@model PlayYourCV.Models.Usuario
@{
    string titulo = (string)ViewData["Titulo"];
}

<h2>@titulo</h2>
@{
    PlayYourCV.Models.Usuario usuario = (PlayYourCV.Models.Usuario)ViewData["usuario"];
    if (usuario != null)
    {
        string fecha;
        if (usuario.FechaNacimiento.Equals(default(DateTime)))
        {
            fecha = "";
        }
        else
        {
            fecha = String.Format("{0:yyyy-MM-dd}", usuario.FechaNacimiento);
        }
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="jumbotron">
                        <img src="~/Content/images/nodisp.png" title="PlayYourCV" alt="PlayYourCV" width="100px" />
                    </div>
                    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Ayuda</button>

                    <!-- Modal -->
                    <div class="modal fade" id="myModal" role="dialog">
                        <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Datos Personales</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="img-mascota">
                                        <img src="~/Content/images/mascota/Robot_1.png" />
                                        <p>Recuerda que tus datos personales deben llevar información real.</p>
                                    </div>

                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                </div>
                            </div>

                        </div>
                    </div>


                </div>
                <div class="col-md-9">
                    <div class="jumbotron">
                        <form action="/DatosPersonales/Edit" method="post">
                            <div class="form-group">
                                <label for="Nombre">Nombre:</label>
                                <input type="text" class="form-control" name="Nombre" value="@usuario.Nombre" />
                            </div>
                            <div class="form-group">
                                <label for="Apellido1">Primer Apellido:</label>
                                <input type="text" class="form-control" name="Apellido1" value="@usuario.Apellido1" />
                            </div>
                            <div class="form-group">
                                <label for="Apellido2">Segundo Apellido:</label>
                                <input type="text" class="form-control" name="Apellido2" value="@usuario.Apellido2" />
                            </div>
                            <div class="form-group">
                                <label for="Telefono">Telefono:</label>
                                <input type="text" class="form-control" name="Telefono" value="@usuario.Telefono" />
                            </div>
                            <div class="form-group">
                                <label for="FechaNacimiento">Fecha Nacimiento:</label>
                                <input type="date" class="form-control" name="FechaNacimiento" value="@fecha" />
                            </div>
                            <div class="form-group">
                                <label for="Email">Email:</label>
                                <input type="email" name="Email" class="form-control" value="@usuario.Email" />
                            </div>
                            <button type="submit" class="btn btn-default">Actualizar</button>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    }
}




